@page
@model TwitchStep02.Pages.AddCustomerModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Add Customer</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="form-group mt-2">
                    <label asp-for="Customer.Name">Name</label>
                    <input class="form-control" asp-for="Customer.Name" placeholder="Enter Name">
                    <span class="text-danger" asp-validation-for="Customer.Name"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Customer.Email">Email</label>
                    <input class="form-control" asp-for="Customer.Email" placeholder="Enter Email">
                    <span class="text-danger" asp-validation-for="Customer.Email"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Customer.Phone">Phone</label>
                    <input class="form-control" asp-for="Customer.Phone" placeholder="Enter Phone">
                    <span class="text-danger" asp-validation-for="Customer.Phone"></span>
                </div>
                <div class="form-group mt-2">
                    <label  asp-for="Customer.Salary">Salary</label>
                    <input class="form-control" asp-for="Customer.Salary" placeholder="Enter Salary">
                    <span class="text-danger" asp-validation-for="Customer.Salary"></span>
                </div>
                <button type="submit" class="btn btn-success mt-2 w-100">Submit</button>
            </form>
        </div>
    </div>
</div>

@section scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    }
